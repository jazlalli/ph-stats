<h3>Avg Vote Count / Day of the Year</h3>
<span id="chart3" class="ct-chart img-responsive"></span>

<script type="text/javascript">
  getChartData('daysofyear', function (data) {
    var series = [];

    data.data.forEach(function (item) {
      series.push(Math.round(item.avg));
    });

    new Chartist.Line('#chart3', {
      labels: [],
      series: [series]
    }, {
      height: 300,
      showPoint: false,
      axisX: {
        labelOffset: {
          x: '-20px',
          y: '30px'
        }
      }
    });
  });

  console.log('days of year chart');
</script>
