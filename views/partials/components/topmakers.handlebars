<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h2 class="sub-header">Top Makers</h2>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>User</th>
          <th>No. of things made</th>
        </tr>
      </thead>
      <tbody>
      	{{#each data.topmakers }}
					<tr>
            <td><img class="img-circle" width="40" src="{{this.image}}" alt="{{this.username}}" /></td>
						<td>{{this.username}}</td>
						<td>{{this.maker_of_count}}</td>
					</tr>
				{{/each}}
      </tbody>
    </table>
  </div>
</div>

